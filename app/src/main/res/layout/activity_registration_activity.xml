<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RegistrationActivity"
    android:background="@drawable/paw">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="NICK"
        android:ems="10"
        android:id="@+id/editTextnickregistration"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editTextpasswordregistration"
        android:layout_below="@+id/editTextnickregistration"
        android:layout_alignLeft="@+id/editTextnickregistration"
        android:layout_alignStart="@+id/editTextnickregistration"
        android:layout_marginTop="45dp"
        android:text="Password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editTextemailregistration"
        android:layout_marginTop="52dp"
        android:text="E-mail"
        android:layout_below="@+id/editTextpasswordregistration"
        android:layout_alignLeft="@+id/editTextpasswordregistration"
        android:layout_alignStart="@+id/editTextpasswordregistration" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:id="@+id/buttonregistation"
        android:layout_below="@+id/editTextemailregistration"
        android:layout_alignLeft="@+id/editTextemailregistration"
        android:layout_alignStart="@+id/editTextemailregistration"
        android:layout_marginTop="39dp" />

</RelativeLayout>
