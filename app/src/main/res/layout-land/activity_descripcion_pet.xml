<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".DescriptionPetActivity">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifview1login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/perrocasipelota"
            android:background="@drawable/patasyhuesos"

            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonPetDes"
            android:layout_alignParentTop="true"
            android:background="@drawable/hamsterdibujoclipart"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <android.support.v7.widget.Toolbar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarpetDes"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/imageButtonPetDes"
            android:layout_alignEnd="@+id/imageButtonPetDes">


        </android.support.v7.widget.Toolbar>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listViewPetDes"
            android:layout_below="@+id/toolbarpetDes"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            />


    </RelativeLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buttonfloatingmascotasedescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@android:drawable/ic_input_add"
        app:borderWidth="0dp"
        app:elevation="6dp"
        android:layout_above="@+id/listViewPetDes"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="25dp" />


</FrameLayout>
